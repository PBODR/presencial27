
<h1>Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Count</th>
      <th>Name</th>
      <th>Options</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.products.count %></td>
        <td><%= link_to category.name, category %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class:'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class:'btn btn-info'  %>
